<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Dark Theme -->
    <style name="Theme.Aroma" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/bg_dark</item>
        <item name="android:colorBackground">@color/bg_dark</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/bg_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.Aroma.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/bg_dark</item>
        <item name="android:colorBackground">@color/bg_dark</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/bg_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.Aroma.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/bg_light</item>
        <item name="android:colorBackground">@color/bg_light</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/panel_light</item>
        <item name="colorAccent">@color/accent</item>
    </style>
</resources>
